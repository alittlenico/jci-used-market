/* header */

/* 搜索框取消按钮 */
.cancel-class{
  color:#fff
}
/* 轮播图 */
.banner{
  width: 100%;height: 295rpx;margin-top: 20rpx;
}
.banner swiper{
  width: 100%;height: 100%;
}
.banner image{
  width: 100%;height: 100%;
}

/* 类别 */
.type-tab{
  white-space: nowrap;height: 75rpx;background:#fff;
}
.type-tab view{
  display:inline-block; text-align: center;width: 165rpx;height: 100%;
  box-sizing: border-box;line-height: 75rpx;
}
.type-tab view.active{
  border-bottom: 1px solid #165dad;
}
.content{
  width: 100%;height: calc(100% - 182rpx);
  position: fixed;overflow-y: auto;
}


/* 商品展示区域 */
.goods{
  width: 100%;display: flex;flex-wrap: wrap;justify-content: space-between;
  padding:0rpx 10rpx;box-sizing: border-box;margin-top:30rpx;
}
.goods .box{
  background: #fefefe;
  width: 358rpx;height: 500rpx;
  margin-bottom:20rpx;
}
.box image{
  width: 358rpx;
}
.box image,.box{
  border-radius: 25rpx;
}
.title{
  height: 76rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
.box .detail{
  margin-top: 5rpx;
  height: 50rpx;line-height: 50rpx;display: flex;justify-content: space-between;
}
.box .detail image{
  width: 50rpx;height: 100%;border-radius: 50rpx;
}



