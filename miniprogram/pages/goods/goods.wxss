.conContainer{
  padding:20rpx 15rpx;background:#fff;width: 100%;
}
.detail{
  margin-bottom: 120rpx;
}
.detail image{
  width: 100%;
}
.detail .liulan{
  border-top:1px solid rgba(27, 26, 26, 0.4);
  padding-top: 15rpx;
}
.info{
  height: 120rpx;width: 100%;display: flex;border-bottom:1rpx solid rgb(151, 139, 139);padding-bottom: 30rpx;
}
.info image{
  height: 100%;border-radius: 15rpx;
}
.info .txt{
  padding:5rpx 20rpx 0;display: flex;justify-content: space-between;flex-direction: column;
}

/* 顶部按钮区 */
.btns{
  background-color: #fefefe;position: fixed;bottom:0rpx;display: flex;
  width: 100%;height: 120rpx;justify-content: space-between;
}
.left-btns{
  height: 100%;width: 300rpx;display: flex;
}
.collect-btn{
  display: flex;flex-direction:column;height: 100%;text-align: center;
  justify-content: space-between;padding:10rpx 0rpx;margin-left: 20rpx;
}
.right-btn{
  height: 100%;width: 250rpx;background-color: #165dad;
  text-align: center;line-height: 120rpx;color: #fff;font-size: 40rpx;
}